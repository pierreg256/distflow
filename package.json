{
  "name": "distflow",
  "version": "0.1.0",
  "private": true,
  "description": "Framework TypeScript pour le développement distribué (PMD + messaging)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces && node test/integration-test.js",
    "test:integration": "node test/integration-test.js",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "keywords": [
    "distributed",
    "pmd",
    "messaging",
    "tcp",
    "framework"
  ],
  "author": "pierreg256",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  }
}
